# Server Configuration
PORT=3000
NODE_ENV=development

# Upload Password
UPLOAD_PASSWORD=adrigdeva

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=rag_documents
QDRANT_TIMEOUT=30000

# Embedding Configuration
EMBEDDING_METHOD=XENOVA
# EMBEDDING_METHOD=OPENAI

# Xenova Embedding Settings (Local, Free)
XENOVA_MODEL=Xenova/all-MiniLM-L6-v2
XENOVA_DIMENSIONS=384
XENOVA_QUANTIZED=true

# OpenAI Embedding Settings (Paid API)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536
OPENAI_TIMEOUT=30000
OPENAI_MAX_RETRIES=3

# LLM Configuration (for chat completions)
LLM_PROVIDER=OPENAI
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# RAG Configuration
RAG_TOP_K=5
RAG_MIN_SCORE=0.5
RAG_CONTEXT_WINDOW=10

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_FILE_SIZE=52428800

# Cache Configuration
CACHE_MAX_SIZE=10000
CACHE_TTL=3600000

# Chat History
MAX_HISTORY_LENGTH=50
HISTORY_PAGE_SIZE=20
